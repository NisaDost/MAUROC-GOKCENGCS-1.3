<UserControl x:Class="GCS_UI.Components.Taskbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCS_UI.Components" xmlns:viewmodel="clr-namespace:GCS_UI.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:HomePageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding TaskBarHeight}"/>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
