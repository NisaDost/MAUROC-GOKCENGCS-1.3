<UserControl x:Class="GCS_UI.Components.LoginPage.InputBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GCS_UI.Components.LoginPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel VerticalAlignment="Bottom">
                <TextBlock Style="{StaticResource HeaderFont}">MAUROC GÖKÇEN <LineBreak/> YER KONTROL İSTASYONU</TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Hoş Geldiniz. Lütfen giriş yapınız."
                           HorizontalAlignment="Center"/>

                <TextBox Style="{StaticResource InputBox}"  
                         Grid.Row="0" 
                         Text="Kullanıcı Adı"/>

                <TextBox Style="{StaticResource InputBox}"  
                         Grid.Row="1" 
                         Text="Parola"/>

                <Button Style="{StaticResource SubmitButton}"
                        Content="Giriş"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <TextBlock Text="© 2025 MAUROC Gökçen Yer Kontrol İstasyonu"
                           Padding="5"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
